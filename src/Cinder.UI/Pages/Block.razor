@page "/block/{hash}"
@inherits BlockModel


@if (IsLoading)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <h1 class="title is-4 is-spaced">Block <small class="has-text-grey">#@Block.BlockNumber</small></h1>
    <BlockInfoTable Block="@Block"/>
    <TransactionInfoTable BlockHash="@Block.Hash"/>
}