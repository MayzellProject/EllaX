@page "/"
@using EllaX.Core.Dtos
@using EllaX.Core.Extensions
@using Humanizer
@inject HttpClient Http

<h1>Hello, world!</h1>

@if (_healthDtos == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Last Seen</th>
        </tr>
        </thead>
        <tbody>
        @foreach (HealthDto healthDto in _healthDtos)
        {
            <tr>
                <td>@healthDto.Latitude</td>
                <td>@healthDto.Longitude</td>
                <td>@DateTimeOffset.UtcNow.AddMinutes(-healthDto.Age).Humanize()</td>
            </tr>
        }
        </tbody>
    </table>
}

<div id="mapid"></div>

@functions {
    PeerHealthResponseDto _healthResponse;

    protected override async Task OnInitAsync()
    {
        _healthResponse = await Http.GetJsonAsync<PeerHealthResponseDto>("http://localhost:5000/api/network/health");
    }

}